<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.symptom_checker.team.symptom_checker.homeActivity"
    android:background="#FFB6D8EC">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="363dp"
        android:id="@+id/linLayoutLogo">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgviewLogo"
            android:src="@drawable/finishedcloud"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="327dp"
        android:layout_height="283dp"
        android:baselineAligned="true"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linLayoutMain">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Take the first step and see what could be causing your symptoms."
                android:id="@+id/txtBegin"
                android:textAlignment="center"
                android:layout_above="@+id/linLayoutMain"
                android:layout_alignParentStart="true"
                android:layout_weight="3" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/for_label"
                android:id="@+id/lblFor"
                android:layout_weight="3"
                android:autoText="true"
                android:layout_gravity="center"
                android:textAlignment="textStart"
                android:gravity="center" />

            <Spinner
                android:layout_width="160dp"
                android:layout_height="59dp"
                android:id="@+id/spinFor" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Age:"
                android:id="@+id/lblAge"
                android:layout_weight="3"
                android:autoText="true"
                android:layout_gravity="center"
                android:textAlignment="textStart"
                android:gravity="center" />

            <Spinner
                android:layout_width="160dp"
                android:layout_height="59dp"
                android:id="@+id/spinAge"
                android:focusable="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/lblGender"
                android:layout_weight="3"
                android:autoText="true"
                android:layout_gravity="center"
                android:textAlignment="textStart"
                android:gravity="center"
                android:text="Gender:" />

            <Spinner
                android:layout_width="160dp"
                android:layout_height="59dp"
                android:id="@+id/spinGender"
                android:focusable="false" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="132dp"
        android:layout_height="57dp"
        android:text="Begin"
        android:id="@+id/btnBegin"
        android:layout_gravity="center_horizontal"
        android:background="#22779c"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/linLayoutMain"
        android:layout_alignEnd="@+id/linLayoutMain"
        android:layout_alignStart="@+id/linLayoutMain" />

    <Button
        android:layout_width="132dp"
        android:layout_height="57dp"
        android:text="Emergency"
        android:id="@+id/btnEmergency"
        android:layout_gravity="center_horizontal"
        android:background="#9c2222"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/linLayoutMain"
        android:layout_alignStart="@+id/linLayoutMain" />
</RelativeLayout>
